                    <!-- Options for districts here -->
                </select>
                   
            
                
            <label for="district">City:</label>
            <input type="text" id="district" name="city" required>

            <label for="pincode">Pincode:</label>
            <input type="tel" id="pincode" name="pincode" required>

          

            <button type="submit">Submit</button>
        </form>
    </div>

</body>

</html>
