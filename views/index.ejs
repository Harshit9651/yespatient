<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Yes Patient - Search</title>
  <!-- Link Bootstrap CSS -->
  <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <!-- Custom CSS -->
  <style>
    body {
      font-family: 'Open Sans', sans-serif;
      background-color: #f8f9fa;
    }

    header {
      background-image: url('https://images.pexels.com/photos/261059/pexels-photo-261059.jpeg?auto=compress&cs=tinysrgb&dpr=2&w=500');
      background-size: cover;
      color: white;
      text-align: center;
      padding: 60px 20px;
    }

    header h1 {
      font-size: 3em;
      font-weight: bold;
    }

    header h3 {
      font-size: 1.5em;
    }

    .cta-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    .btn-primary {
      background-color: #28a745;
      border-color: #28a745;
      font-size: 1.2em;
      padding: 10px 20px;
      transition: transform 0.3s;
    }

    .btn-primary:hover {
      transform: scale(1.1);
      background-color: #218838;
      border-color: #218838;
    }

    main {
      padding: 40px 20px;
      text-align: center;
    }

    .search-container {
      display: flex;
      flex-direction: column;
      align-items: center;
      margin-top: 40px;
    }

    .search-option {
      width: 100%;
      padding: 20px;
      border: 1px solid #ddd;
      border-radius: 10px;
      background-color: white;
      box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.1);
      margin-bottom: 20px;
    }

    .search-option h4 {
      margin-bottom: 10px;
    }

    .search-option input {
      width: 100%;
      padding: 10px;
      border: 1px solid #ddd;
      border-radius: 5px;
    }

    .btn-search {
      background-color: #28a745;
      color: white;
      border: none;
      border-radius: 5px;
      padding: 10px 20px;
      transition: background-color 0.3s;
      font-size: 1em;
    }

    .btn-search:hover {
      background-color: #218838;
    }

    /* Responsive Layout */
    @media (min-width: 768px) {
      .search-container {
        flex-direction: row;
        justify-content: center;
        align-items: center;
        gap: 20px;
      }

      .search-option {
        width: 30%;
        margin-bottom: 0;
      }
    }

    .site-footer {
      background-color: #2c3e50;
      color: white;
      padding: 30px;
      text-align: center;
    }

    .footer-container {
      display: flex;
      flex-wrap: wrap;
      justify-content: space-between;
    }

    .footer-branding,
    .footer-nav,
    .footer-contact,
    .footer-social {
      flex: 1;
      text-align: left;
      margin: 10px;
    }

    .footer-nav ul {
      list-style: none;
      padding: 0;
    }

    .footer-nav ul li a {
      color: white;
      text-decoration: none;
      transition: color 0.3s;
    }

    .footer-nav ul li a:hover {
      color: #3498db;
    }

    .footer-social {
      display: flex;
      flex-direction: row;
      gap: 20px;
    }

    .footer-social a {
      color: white;
      text-decoration: none;
      transition: color 0.3s;
    }

    .footer-social a:hover {
      color: #3498db;
    }

    .footer-copyright {
      padding-top: 10px;
      font-size: 14px;
    }
  </style>
</head>
<body>

<header>
  <h1>Welcome to Yes Patient</h1>
  <h3>Find and book appointments with government doctors easily.</h3>
  <div class="cta-buttons">
    <button class="btn btn-primary">Get Started</button>
    <button class="btn btn-outline-light">Learn More</button>
  </div>
</header>

<main>
  <div class="search-container">
    <div class="search-option">
      <h4>Search by Pincode</h4>
      <input type="text" placeholder="Enter Pincode" id="search-pincode">
      <button class="btn-search" onclick="searchByPincode()">Search</button>
    </div>

    <div class="search-option">
      <h4>Search by Hospital Name</h4>
      <input type="text" placeholder="Enter Hospital Name" id="search-hospital">
      <button class="btn-search" onclick="searchByHospital()">Search</button>
    </div>

    <div class="search-option">
      <h4>Search by City</h4>
      <input type="text" placeholder="Enter City Name" id="search-city">
      <button class="btn-search" onclick="searchByCity()">Search</button>
    </div>
  </div>
</main>

<footer class="site-footer">
  <div class="footer-container">
    <div class="footer-branding">
      <h3>Doctor Appointment</h3>
      <p>Your health is our priority.</p>
    </div>

    <div class="footer-nav">
      <h4>Quick Links</h4>
      <ul>
        <li><a href="#home">Home</a></li>
        <li><a href="#services">Services</a></li>
        <li><a href="#about">About Us</a></li>
        <li><a href="#contact">Contact</a></li>
      </ul>
    </div>

    <div class="footer-contact">
      <h4>Contact Us</h4>
      <p>Email: info@doctorappointment.com</p>
      <p>Phone: +1 (555) 123-4567</p>
      <p>Address: 123 Main St, City, Country</p>
    </div>

    <div class="footer-social">
      <h4>Follow Us</h4>
      <a href="https://facebook.com" target="_blank">Facebook</a>
      <a href="https://twitter.com" target="_blank">Twitter</a>
      <a href="https://instagram.com" target="_blank">Instagram</a>
    </div>
  </div>

  <div class="footer-copyright">
    <p>&copy; 2024 Doctor Appointment. All rights reserved.</p>
  </div>
</footer>

<!-- Bootstrap JS -->
<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

<script>
  function searchByPincode() {
    const pincode = document.getElementById("search-pincode").value;
    alert("Searching by Pincode: " + pincode);
  }

  function searchByHospital() {
    const hospital = document.getElementById("search-hospital").value;
    alert("Searching by Hospital: " + hospital);
  }

  function searchByCity() {
    const city = document.getElementById("search-city").value;
    alert("Searching by City: " + city);
  }
</script>

</body>
</html>