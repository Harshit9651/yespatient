<script>
  function searchByPincode() {
    const pincode = document.getElementById('search-pincode').value;
    fetch(`/search/pincode?pincode=${pincode}`)
      .then(response => response.json())
      .then(data => {
        console.log(data);
        displayResults(data);
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while searching.');
      });
  }

  function searchByHospital() {
    const hospital = document.getElementById('search-hospital').value;
    fetch(`/search/hospital?hospitalName=${hospital}`)
      .then(response => response.json())
      .then(data => {
        console.log(data);
        displayResults(data);
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while searching.');
      });
  }

  function searchByCity() {
    const city = document.getElementById('search-city').value;
    fetch(`/search/city?city=${city}`)
      .then(response => response.json())
      .then(data => {
        console.log(data);
        displayResults(data);
      })
      .catch(error => {
        console.error('Error:', error);
        alert('An error occurred while searching.');
      });
  }

  function openOverlay() {
    document.getElementById('search-overlay').style.display = 'flex';
  }

  function closeOverlay() {
    document.getElementById('search-overlay').style.display = 'none';
  }

  function displayResults(data) {
    const overlayBody = document.getElementById('overlay-body');
    overlayBody.innerHTML = '';

    data.forEach(item => {
      const div = document.createElement('div');
      div.className = 'overlay-item';
      div.innerHTML = `
        <img src="${item.Image}" alt="${item.hospitalName}">
        <h5>${item.hospitalName}</h5>
     
      `;
      overlayBody.appendChild(div);
    });

    openOverlay();
  }
  // Function to display flash message and hide it after 4 seconds
function displayFlashMessage(messageClass, message) {
  const flashMessage = document.createElement('div');
  flashMessage.className = `flash-message ${messageClass}`;
  flashMessage.textContent = message;
  document.body.appendChild(flashMessage);
  
  // Show flash message
  flashMessage.style.display = 'block';

  // Hide flash message after 4 seconds
  setTimeout(() => {
    flashMessage.style.display = 'none';
  }, 4000); // 4 seconds in milliseconds
}

</script>

