    }

    .cta-buttons {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 30px;
    }

    .btn-primary {
      background-color: #28a745;
      border-color: #28a745;
      font-size: 1.2em;
      padding: 10px 20px;
      transition: transform 0.3s;
    }

    .btn-primary:hover {
